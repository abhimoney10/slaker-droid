<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="slaker.sydneyuni.au.com.slaker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="slaker.sydneyuni.au.com.slaker.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".InstructionsActivity"
           android:parentActivityName="slaker.sydneyuni.au.com.slaker.MainActivity"
           android:label="@string/buttonInstructions">
           <meta-data
               android:name="android.support.PARENT_ACTIVITY"
               android:value="slaker.sydneyuni.au.com.slaker.MainActivity">
           </meta-data>
        </activity>
        <activity android:name=".FirstPicture"
            android:parentActivityName="slaker.sydneyuni.au.com.slaker.MainActivity"
            android:label="@string/buttonFirstPicture">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="slaker.sydneyuni.au.com.slaker.MainActivity">
            </meta-data>
        </activity>

    </application>

</manifest>