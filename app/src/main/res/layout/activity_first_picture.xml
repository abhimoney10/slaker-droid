<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="slaker.sydneyuni.au.com.slaker.FirstPicture"
    android:orientation="horizontal">
                <org.opencv.android.JavaCameraView
                    android:id="@+id/FirstPictureCameraView"
                    android:layout_height="match_parent"
                    opencv:show_fps="true"
                    opencv:camera_id="any"
                    android:layout_width="0dp"
                    android:layout_weight="2.27">
            </org.opencv.android.JavaCameraView>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.05">

        <Button
                    android:id="@+id/buttonSaveImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/buttonSaveImage"
                    android:text="@string/buttonSaveImage" />

        <Button
                    android:id="@+id/buttonBurstPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/buttonBurstPicture"
                    android:text="@string/buttonBurstPicture" />

        <Button
                    android:id="@+id/buttonWatershed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/buttonWatershed"
                    android:text="@string/buttonWatershed" />


    </LinearLayout>

</LinearLayout>
