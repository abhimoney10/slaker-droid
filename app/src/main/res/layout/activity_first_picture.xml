<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="slaker.sydneyuni.au.com.slaker.FirstPicture"
    android:orientation="horizontal">
                <org.opencv.android.JavaCameraView
                    android:id="@+id/FirstPictureCameraView"
                    android:layout_height="match_parent"
                    opencv:show_fps="true"
                    opencv:camera_id="any"
                    android:clickable="false"
                    android:longClickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="1">
            </org.opencv.android.JavaCameraView>


            <Button
                android:id="@+id/buttonSaveImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/buttonSaveImage"
                android:text="@string/buttonSaveImage" />
            <Button
                android:id="@+id/buttonSegment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/buttonSegment"
                android:text="@string/buttonSegment" />

            <Button
                android:id="@+id/buttonBurstPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/buttonBurstPicture"
                android:text="@string/buttonBurstPicture" />

</LinearLayout>
