<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="slaker.sydneyuni.au.com.slaker.activities.ResultsActivity"
    android:id="@+id/activity_results">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Results"
        android:id="@+id/textView2"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The modeled coefficients of your samples slaking are: "
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="false"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coefficient A: "
        android:id="@+id/textView4"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/activity_message_CoefA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.7"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginLeft="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coefficient B: "
        android:id="@+id/textView5"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/activity_message_CoefB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.7"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_marginLeft="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coefficient C: "
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/activity_message_CoefC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.7"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginLeft="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error               :"
        android:layout_marginTop="70dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/activity_message_sdFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.7"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginLeft="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is this mean?"
        android:id="@+id/button"
        android:layout_below="@+id/activity_message_sdFinal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

</RelativeLayout>
