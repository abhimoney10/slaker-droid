<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="slaker.sydneyuni.au.com.slaker.activities.ResultsActivity"
    android:id="@+id/activity_results">

    <TextView
        android:id="@+id/activity_message_CoefA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/activity_message_CoefC" />

    <TextView
        android:id="@+id/activity_message_CoefB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="62dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView4" />
    <TextView
        android:id="@+id/activity_message_CoefC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="99dp"
        android:layout_below="@+id/activity_message_CoefB"
        android:layout_alignStart="@+id/activity_message_CoefB"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Results"
        android:id="@+id/textView2"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The modeled coefficients of your samples slaking are: "
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coefficient A: "
        android:id="@+id/textView4"
        android:layout_marginEnd="33dp"
        android:layout_alignTop="@+id/activity_message_CoefB"
        android:layout_toStartOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coefficient B: "
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/activity_message_CoefC"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coefficient C: "
        android:id="@+id/textView6"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is this mean?"
        android:id="@+id/button"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/activity_message_CoefA"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
