<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    tools:context="slaker.sydneyuni.au.com.slaker.activities.ExampleInstructions"
    android:orientation="horizontal">

    <org.opencv.android.JavaCameraView
        android:id="@+id/FirstPictureCameraViewExample"
        android:layout_height="fill_parent"
        opencv:show_fps="true"
        opencv:camera_id="any"
        android:layout_weight="2.27"
        android:layout_width="wrap_content">
    </org.opencv.android.JavaCameraView>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"

        android:weightSum="1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.21" />

        <Button
            android:id="@+id/buttonFirstPictureExample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/buttonFirstPicture"
            android:text="@string/buttonFirstPicture"
            android:layout_weight="0.00"
            android:textSize="10sp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.21" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_weight="0.13"
        android:text="You can also touch the screen"
        android:gravity="center_vertical|center_horizontal"
        />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.32" />

        <Button
        android:id="@+id/buttonBackInstructionsExample"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="@string/buttonBackInstructions"
        android:textSize="12sp"
        android:onClick="startInstructions"
        />
    </LinearLayout>
</LinearLayout>
